.page_wrap{background: #f8f8f8;padding-bottom: 40rpx;}
.userinfo{
    display: flex;
    align-items: center;
    padding-left: 30rpx;height: 70px;
    background: #fff;
}
.userinfo .avatar{
    width: 45px;
    height:45px;
    border-radius: 50%;
    overflow: hidden
}
.userinfo .uname{
    font-size: 16px;
    color: #111;
    margin-left: 10px;
}
.menu{
    background: #fff;
    margin-top: 10px;
}
.menu .item{
    padding-left: 30rpx;
    position: relative;
}
.menu .item:after{display: block;content:'';position: absolute;right: 30rpx;top:0;bottom:0;margin: auto;width: 16rpx;height: 29rpx;background: url("data:application/octet-stream;base64,") no-repeat center;background-size: cover;transition: all 0.3s;}
.menu .item.open:after{transform: rotate(90deg);}
.menu .item + .into_cnt{display:none;}
.menu .item.open + .into_cnt{display:block;}
.menu .item button{
    height: 45px;
    line-height: 45px;
    font-size: 16px;
    color: #111;
    border-bottom: 1rpx solid #E7E7E7;
}
.menu .item_hover{background-color: rgba(0, 0, 0, 0.1);}
.menu .item:last-child button{border: 0;}
.into_cnt{background: #f4f4f4;padding: 30rpx 0;}
.lesson_item{background: #fff;box-shadow: 0 0 10rpx 4rpx rgba(17,17,17,0.1);display: block;margin: 0 30rpx 30rpx;}
.lesson_item:last-child{margin-bottom: 0;}
.lesson_item .lesson_cnt{display: -webkit-box;padding:30rpx;width: 100%;height:296rpx;box-sizing: border-box;position: relative;}
.lesson_cnt .teach_img{display: block;width:170rpx;height: 170rpx;position: relative;margin-right: 20rpx;}
.lesson_cnt .teach_img image{display: block;width: 100%;height: 100%;}
.lesson_cnt .teach_img:before{position: absolute;content:'';left: 0;right: 0;top:0;bottom:0;background:rgba(0,0,0,0.3);border-radius: 6rpx;}
.lesson_cnt .teach_img image{display: block;width: 100%;height: 100%;border-radius: 6rpx;}
.lesson_cnt .teach_img:after{position: absolute;left: 0;right: 0;top:0;bottom:0;background: url("https://cdn.upchina.com/front/gudaka/images/list_play_icon.png") no-repeat center;background-size: cover;width:48rpx;height: 48rpx;content:'';margin: auto;z-index: 1;}
.lesson_item:active{opacity: 0.7;}
.lesson_item .lesson_txt{-webkit-box-flex: 1;font-size: 24rpx;height:170rpx;display: -webkit-box;-webkit-box-orient: vertical;-webkit-box-pack: justify;}
.lesson_item .lesson_title{font-size: 32rpx;color:#111;line-height: 46rpx;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp:2;overflow: hidden;text-overflow: ellipsis;margin-bottom: 13rpx;}
.lesson_txt .order_date{display: -webkit-box;line-height: 1;}
.lesson_txt .order_date>view{display: block;line-height: 1;}
.lesson_txt .order_date .order_price .color_txt{color:#F54646;}
.lesson_txt .order_date .order_expiry{color:rgba(17,17,17,0.6);margin-left:20rpx;}
.lesson_txt .learn_progress{color:#f48930;display: -webkit-box;height: 24rpx;-webkit-box-align: center;line-height: 1;margin-top: 20rpx;}
.lesson_txt .learn_progress:before{display:block;content:'';width: 24rpx;height: 24rpx;background: url("https://cdn.upchina.com/front/gudaka/icon/learn_progress_icon.png") no-repeat center;background-size: cover;margin-right: 5rpx;}
.lesson_txt .lesson_btn{width: 152rpx;height: 50rpx;background-image: linear-gradient(135deg, #FAD961 0%, #F9752A 100%);box-shadow: 0 4px 8px 0 rgba(239,127,33,0.30);border-radius: 100px;line-height: 50rpx;color:#fff;font-size: 28rpx;text-align: center;position: absolute;right: 30rpx;bottom:30rpx;}
.recommend{background: #f4f4f4;}
.recommend .no_lesson{font-size:28rpx;color:rgba(17,17,17,0.4);line-height:1;margin:20rpx auto 50rpx;text-align: center;}
.recommend .recommend_title{font-size: 32rpx;color:#111;line-height: 32rpx;padding-left: 30rpx;}
.recommend .recommend_title:before{display: inline-block;content:'';width:6rpx;height: 32rpx;background: #faa846;vertical-align:top;margin-right:10rpx;margin-bottom: 20rpx;}
.recommend .recommend_txt{font-size: 28rpx;color:rgba(17,17,17,0.6);line-height:50rpx;padding:0 30rpx;margin-bottom: 30rpx;}
.recommend .recommend_txt text{display: block;}
.recommend_lesson .progress_bg{display: block;width: 750rpx;height: 122rpx;margin: 30rpx auto 40rpx;}
.recommend_lesson .lesson_item{margin:0 30rpx;height:230rpx;}
.recommend_lesson .lesson_item .teach_img{width: 170rpx;height: 170rpx;}
.recommend_lesson .lesson_item .lesson_txt{height:170rpx;display: -webkit-box;-webkit-box-orient: vertical;-webkit-box-pack: justify;}
.recommend_lesson .lesson_item .learn_person{font-size: 24rpx;color:rgba(17,17,17,0.6);}
.recommend_lesson .lesson_item .order_date{display: -webkit-box;}
.recommend_lesson .lesson_item .lesson_title{margin-bottom: 0;}
.recommend_lesson .lesson_item .learn_person{line-height: 1;}
.recommend_lesson .lesson_item .order_date>view{display: block;font-size:24rpx;color:#111;line-height: 1;}
.recommend_lesson .lesson_item .order_date .oldprice{color:rgba(17,17,17,0.4);margin-left: 5rpx;text-decoration:line-through;}
.recommend_lesson .lesson_item .order_date .color_txt{color:#F54646;}
.recommend_lesson .lesson_cnt{position: relative;height: 230rpx;}
.recommend_lesson .lesson_cnt .lesson_btn{position: absolute;right: 30rpx;bottom: 30rpx;background-image: linear-gradient(135deg, #FAD961 0%, #F9752A 100%);box-shadow: 0 4px 8px 0 rgba(239,127,33,0.30);border-radius: 100px;width:147rpx;height: 50rpx;line-height: 50rpx;text-align: center;font-size: 28rpx;color:#fff;}
