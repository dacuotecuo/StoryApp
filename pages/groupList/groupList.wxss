.page_wrap{background-color:#f4f4f4;}

.banner_img{display:block;width:100%;}

.group_list{background-color:#fff;margin-top:10px;}
.group_item{display:block;position:relative;}
.group_item + .group_item:before{border-top:1px solid #e6e6e6;content:"";display:block;height:0;left:15px;pointer-events:none;
    position:absolute;right:0;top:0;}
.group_link{display:block;overflow:hidden;position: relative;}

.group_head{display:block;margin:15px 15px 10px;}
.group_main{display:flex;margin:10px 15px 15px;}

.group_img_wrap{display:block;height:75px;margin:0 10px 0 0;overflow:hidden;width:75px;}
.group_img{display:block;width:100%;height: 100%}

.group_con_wrap{display:block;flex:1;}
.group_date{color:rgba(17,17,17,.4);display:block;font-size:12px;}
.group_title{color:#111;display:block;font-size:16px;margin-bottom:4px;overflow:hidden;}
.group_txt{color:rgba(17,17,17,.6);display:block;font-size:12px;line-height: 15px;min-height: 30px;}
.group_count{color:#F3882F;display:block;font-size:14px;}

.group_btn_wrap{align-items:center;display:flex;flex-flow:column;justify-content:center;margin:0 0 0 10px;}
.group_btn_txt{color:#999;display:block;font-size:10px;margin:0 0 4px;text-decoration:line-through;}
.group_btn{background-color:#f3882f;border:1px solid #f3882f;border-radius:50px;color:#fff;display:block;font-size:13px;
    line-height:1;overflow:hidden;padding:6px 0;width: 75px;}
.group_btn:after{border:none;}
.group_btn_hover{opacity:.7;}

.group_btn_wrap.incomplete .group_btn_txt{color:#656565;}
.group_btn_wrap.incomplete .group_btn{background-color:#fff;border-color:#656565;color:#656565;}
.group_btn_will{
    color: #656565;
    border: 1px solid #989898;
    background: #fff;
}
.group_link_active:active{background:#dedede}

.large_btn{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9;
}