<wxs module="filters" src="noKline.wxs"></wxs>
<view class='container'>
  <view class='head'>
    <view class='head_1'>五星股票池</view>
    <view class='head_2'>大数据+专业人工智能选股</view>
    <view class='head_3'>五星买点推荐强势买入机会潜力股</view>
    <view class='head_4' bindtap='showVideo'>查看选股规则
      <text class='head_tag'></text>
    </view>
  </view>
  <view class='video_content' wx:if="{{videoShow}}">
    <view class='content_1'>
      <view class='video_title'>选股规则</view>
      <video src="https://cdn.upchina.com/acm/fivestars/uploadfile/edu1.mp4" class='video_detail' poster='http://cdn.upchina.com/front/longzhou/images/video1.png'></video>
    </view>
    <view class='content_1'>
      <view class='video_title'>选股规则</view>
      <video src="https://cdn.upchina.com/acm/fivestars/uploadfile/edu2.mp4" class='video_detail' poster='http://cdn.upchina.com/front/longzhou/images/video2.png'></video>
    </view>
    <view class='video_info'>本产品提供的投机建议仅为辅助您投资决策的软件工具，请您根据自己的经验及风险承担能力慎重选择。</view>
  </view>
  <view class='main'>
    <view class='cont_fixed'>
      <view class='item_head'>
        <view class='item'>名称</view>
      </view>
      <view wx:for="{{stock}}" wx:key="{{index}}" wx:for-index="idx" class="item_wrap {{ idx == 0 ? 'hot' : ''}}">
        <view class='item_fixed'>
          <view class="stock_name {{idx > 2 ? 'lock' : '' }}" catchtap='goShare' data-id="{{idx}}">{{idx > 2 ? '': item.sName }}
            <view class='stock_code' wx:if="{{index<2}}">{{item.sCode}}</view>
          </view>
        </view>
      </view>
    </view>
    <view class='main_box'>
      <view class='list_head'>
        <view class='item'>信号持续</view>
        <view class='item'>入选价格
        </view>
        <view class='item'>入选后最高涨幅</view>
        <view class='item'>当日涨幅</view>
        <view class='item'>信号时间</view>
        <view class='item'>信号状态</view>
      </view>
      <view class='list_main' wx:for="{{stock}}" wx:key="{{index}}" wx:for-index="idx">
        <view class='line' catchtap='goShare' data-id='{{idx}}'>
          <view class='stock_info'>
            <view class='item'>{{item.mField.signalContinue}}天</view>
            <view class='item'>{{item.mField.signalPrice}}元</view>
            <view class="item {{item.mField.RiseMax == 0 ? '' :(item.mField.RiseMax > 0 ? 'c_red' : 'c_green')}}">{{filters.toFix(item.mField.RiseMax*100)}}%</view>
            <view class="item {{item.mField.RiseNow == 0 ? '' :(item.mField.RiseNow > 0 ? 'c_red' : 'c_green')}}">{{filters.toFix(item.mField.RiseNow*100)}}%</view>
            <view class='item'>{{item.mField.signalTime}}</view>
            <view class='item'>{{item.mField.signalStat == 1 ? '未确立' : (item.mField.signalStat == 2 ? '已确立' : '已结束')}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class='ft' wx:if="{{ifPermission === -1}}">
    <text class='ft_1'>分享给好友，即可查看所有股票详情</text>
    <button class='ft_share' open-type='share'>去分享</button>
  </view>
  <view class='footer' wx:if="{{ifPermission === -2 || ifPermission === 0}}">
    <view class='pay_btn' bindtap='goPay'>￥ 18/月 立即续费</view>
    <form report-submit="true" bindsubmit="gotoCreate" data-id="teach_001" class='footer_2'>
      <button formType="submit" class='ft_btn'>免费获取</button>
    </form>
  </view>
</view>
<view class='pop_mask' wx:if="{{ klineShow }}">
  <view class='pop_share' wx:if="{{ifPermission === -1}}">
    <view class='pop_bg'>
      <view class='pop_1'>—— 分享给好友 ——</view>
      <view class='pop_2'>可查看所有五星股票</view>
    </view>
    <view>
      <button class='pop_3' open-type='share'>马上分享</button>
    </view>
    <view class="pop_close" bindtap="popClose">
      <image class="pop_img" mode="widthFix" src="/images/x.png"></image>
    </view>
  </view>
  <view class='pop_share' wx:if="{{ifPermission === -2 || ifPermission === 0}}">
    <view class='pop_bg'>
      <view class='pop_1'>—— 邀请好友 ——</view>
      <view class='pop_2'>一起免费使用五星股票池</view>
    </view>
    <form report-submit="true" bindsubmit="gotoCreate" data-id="teach_001">
      <button formType="submit" class='pop_3'>去邀请</button>
    </form>
    <view class="pop_close" bindtap="popClose">
      <image class="pop_img" mode="widthFix" src="/images/x.png"></image>
    </view>
  </view>
</view>