.page_wrap{background-color:#f8f8f8;}
.group_list{background-color:#fff;margin-top:10px;}
.group_item{display:block;position:relative;}
.group_item + .group_item:before{border-top:1px solid #e6e6e6;content:"";display:block;height:0;left:15px;pointer-events:none;
    position:absolute;right:0;top:0;}
.group_link{display:block;overflow:hidden;}

.group_head{display:block;margin:15px 15px 10px;}
.group_main{display:flex;margin:10px 15px 15px;}

.group_img_wrap{display:block;height:75px;margin:0 10px 0 0;overflow:hidden;width:75px;}
.group_img{display:block;width:100%;}

.group_con_wrap{display:block;flex:1;}
.group_date{color:rgba(17,17,17,.4);display:block;font-size:12px;}
.group_title{color:#111;display:block;font-size:16px;height:28px;overflow:hidden;}
.group_txt{color:rgba(17,17,17,.6);display:block;font-size:12px;}
.group_count{color:#F3882F;display:block;font-size:14px;}

.group_btn_wrap{align-items:center;display:flex;flex-flow:column;margin:0 0 0 10px;}
.group_btn_txt{color:#999;display:block;font-size:14px;margin:0 0 4px;}
.group_btn{background-color:#f3882f;border:1px solid #f3882f;border-radius:50px;color:#fff;display:block;font-size:13px;
    line-height:1;padding:6px 15px;}
.group_btn:after{border:none;}
.group_btn_hover{opacity:.7;}

.group_btn_wrap.incomplete .group_btn_txt{color:#656565;}
.group_btn_wrap.incomplete .group_btn{background-color:#fff;border-color:#656565;color:#656565;}

.group_list_default{color:rgba(17,17,17,.6);font-size:16px;padding:20px;text-align:center;}

/*新版订单*/
.order_tab{display: -webkit-box;-webkit-box-pack: center;-webkit-box-align: center;height:90rpx;background: #fff;}
.order_tab .tab_list{width: 33.33%;-webkit-box-flex: 1;display: -webkit-box;-webkit-box-align: center;-webkit-box-pack: center;height: 100%;font-size:30rpx;color:#111;line-height: 1;}
.order_tab .tab_list.active{color:#ef7f21;font-size: 34rpx;font-family: 'PingFangSC-Medium';font-weight: bold;}
.order_wrap{padding: 30rpx;}
.order_wrap .order_list{position:relative;background: #fff;box-shadow: 0 1px 10px 1px rgba(17,17,17,0.1);margin-bottom:30rpx;display: block;}
.order_wrap .order_list .order_list_wrap{display: block;}
.order_wrap .order_list .order_list_wrap:active{opacity: 0.7;}
.order_wrap .order_list .order_list_wrap.no_active:active{opacity: 1;}
.order_list .order_list_head{display: -webkit-box;height:82rpx;border-bottom: 1px dashed #e7e7e7;-webkit-box-align: center;font-size: 24rpx;line-height: 1;color:rgba(17,17,17,0.4);-webkit-box-pack: justify;padding: 0 30rpx;}
.order_list .order_list_head text{display: block;line-height: 1;}
.order_list .order_list_cnt{display: -webkit-box;-webkit-box-align: center;height: 90rpx;padding:30rpx 30rpx 108rpx;box-sizing: content-box;}
.order_list .order_list_cnt .img_icon{display: block;width:90rpx;height: 90rpx;}
.order_list .order_list_cnt .img_icon image{display: block;width: 100%;height: 100%;}
.order_list_cnt .order_info{margin-left:20rpx;-webkit-box-flex: 1; }
.order_list_cnt .order_info .order_name{font-size: 30rpx;line-height: 1.4;color:#111;margin-bottom: 20rpx;}
.order_list_cnt .order_info .order_date{font-size: 24rpx;line-height: 1;}
.order_list_cnt .order_info .order_date text{display: inline-block;line-height: 1;}
.order_info .order_date .order_price text{color:#ef7f21;}
.order_info .order_date .order_price{margin-right:30rpx;}
.order_info .order_date .order_expiry{color:rgba(17,17,17,0.6);}
.order_btn{position: absolute;right:30rpx;bottom:30rpx;padding:0 20rpx;height: 48rpx;border: 2rpx solid rgba(17,17,17,0.3);border-radius: 100px;display: -webkit-box;-webkit-box-align: center;-webkit-box-pack: center;color:rgba(17,17,17,0.3);font-size: 28rpx;line-height: 1;margin: 0;}
.order_btn:active{opacity: 0.7;}
.order_btn.pay_btn{color:#f07f21;border-color: #f07f21;}
.not_order{margin-top:210rpx;}
.not_order image{display: block;width:300rpx;height: 300rpx;margin: auto;}
.not_order view{font-size: 30rpx;text-align: center;color:rgba(17,17,17,0.6);}
.mask{position: fixed;top: 0;left: 0;right: 0;bottom: 0;background: rgba(0,0,0,.5);z-index:200}
.mask .customBox{position: absolute;top: 50%;left: 50%;transform: translate(-50%,-50%);width: 280px;background: #fff;box-sizing: border-box;padding: 34px 15px 20px;border-radius: 12px;text-align: center;}
.mask .customBox text{font-size: 17px;color: #111;line-height: 24px;display:table;margin:0 auto;text-align:justify;}
.mask .customBox .goGroupList{height: 40px;line-height: 40px;text-align: center;margin-top: 36px;background-image: linear-gradient(45deg, #FC7143 0%, #FC9043 100%);border-radius: 50px;color: #fff;}
.mask .customBox .goGroupList:active{opacity:.7;}
.mask .close{position: absolute;width: 30px;height: 30px;top: -45px;right: 0;}
.mask .close image{width: 100%;height: 100%;}
.loading{top:0;}


